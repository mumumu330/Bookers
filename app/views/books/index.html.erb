<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h2>Books</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "edit", edit_book_path(book.id) %></td>
            <td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h3>New book</h3>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <h3>error</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
 
  <h4>Body</h4>
  <%= f.text_area :body %>
 
  <h4><%= f.submit 'Create Book' %></h4>

<% end %>
