<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <h3>error</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <h4><%= f.submit 'Update Book' %></h4>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>